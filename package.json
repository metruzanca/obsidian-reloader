{
  "name": "obsidian-reloader",
  "version": "0.1.0",
  "description": "An Obsidian Plugin and Rollup Plugin to enable auto-reloading during Obsidian Plugin development",
  "main": "./lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build:npm": "tsc -p tsconfig-npm.json",
    "build:obsidian": "rollup --config rollup.config.js --environment BUILD:production",
    "dev": "rollup --config rollup.config.js -w",
    "release": "npx tagger",
    "prepublishOnly": "npm run build:npm"
  },
  "keywords": [
    "obsidian",
    "obsidian-md",
    "obsidian-plugin"
  ],
  "author": "Samuele Zanca",
  "license": "MIT",
  "dependencies": {
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "obsidian": "^0.12.0",
    "rollup": "^2.32.1",
    "rollup-plugin-copy": "^3.4.0",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4",
    "ws": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/ws": "^7.4.7",
    "gh-tagger": "^0.2.4"
  },
  "semverPaths": [
    "./manifest.json",
    "./package.json"
  ]
}